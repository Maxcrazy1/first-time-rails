<div class="col-sm-4">
	<figure class="figure">
	  <!-- <img src="https://ampros.org/images/placeholder_800x280.svg" class="figure-img img-fluid rounded"> -->
	  <%= image_tag image.picture.medium.url, class: 'figure-img img-fluid rounded' %>
	  <figcaption class="figure-caption"><%= image.description %></figcaption>
	  <%= link_to t('.edit_link'), edit_image_path(image) %>
	  <%= link_to t('.remove_link'), image, method: :delete, data: { confirm: 'sure?'} %>
	</figure>
</div>